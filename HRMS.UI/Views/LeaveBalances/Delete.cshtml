@model LeaveBalanceDto

@{
    ViewData["Title"] = "Delete Leave Balance";
}

<h1 class="h3 mb-4 text-danger">Delete Leave Balance</h1>

@if (ViewData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}

<div class="card border-danger shadow-sm">
    <div class="card-body">
        <p class="fw-semibold">Are you sure you want to delete this leave balance?</p>
        <dl class="row mb-0">
            <dt class="col-sm-3">Employee No</dt>
            <dd class="col-sm-9">@Model.EmpNo</dd>

            <dt class="col-sm-3">Annual</dt>
            <dd class="col-sm-9">@Model.Annual</dd>

            <dt class="col-sm-3">Sick</dt>
            <dd class="col-sm-9">@Model.Sick</dd>

            <dt class="col-sm-3">Unpaid</dt>
            <dd class="col-sm-9">@Model.Unpaid</dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-end gap-2">
        <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
